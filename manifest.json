{
	"manifest_version": 2,
	"name": "Assistant Reminder",
	"version": "2.7.0",

	"description": "An assistant for all your reminders",
	"icons": {
		"48": "icons/asst-reminder-128.png",
		"96": "icons/asst-reminder-500.png"
	},
	"permissions": [
		"notifications",
		"alarms",
		"storage",
		"unlimitedStorage"
	],

	"background": {
		"scripts": ["background.js"]
	},

	"browser_action": {
		"default_icon": {
			"16": "icons/asst-reminder-32.png",
			"32": "icons/asst-reminder-64.png",
			"64": "icons/asst-reminder-64.png"
		},
		"default_title": "Assistant Reminder",
		"default_popup": "popup/set_reminder_quick.html"
	}
}
